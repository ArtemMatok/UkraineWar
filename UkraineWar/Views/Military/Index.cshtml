@model IEnumerable<MilitaryEquipment>
@{
    ViewData["PageTitle"] = "Militaries";
    ViewData["PageActionText"] = "+ New Military";
    ViewData["PageActionUrl"] = "/Military/Create";
}



<div class="row">
    <div class="col-md-7">
        <ejs-grid id="militaries" dataSource="@Model" gridLines="None"
                  allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
               
                <e-grid-column headerText="Назва" field="Title" width="110px"
                    ></e-grid-column>
                <e-grid-column headerText="Ціна" field="Price" textAlign="Right" width="110px" format="c0"></e-grid-column>
               
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
  
</div>
<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
       
        <form action="/Military/Edit/${MilitaryEquipmentId}">
    @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration">
               Edit
            </button>
        </form>
        <form action="/Military/Delete/${MilitaryEquipmentId}" method="post">
    @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration"
            onclick="return confirm(&quot;Are sure to delete this record?&quot;)">
               Delete
            </button>
        </form>
    </div>
</script>