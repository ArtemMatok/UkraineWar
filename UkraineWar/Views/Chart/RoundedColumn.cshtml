
<style>
    .center-image {
        display: flex;
        justify-content: center;
    }
</style>

<div class="center-image">
    <img src="/Тризуб.svg.png" height="300" width="200" />
</div>
<p class="control-section" align="center" >Втрати РФ у війні</p>

@using Syncfusion.EJ2

            <div class="control-section" align="center" style="color:#fff">

                <ejs-chart class="text-chart" id="lineContainer"  load="load" 
                   pointRender="pointRender" enableSideBySidePlacement="false" >
                    <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category" interval="1" labelPosition="@Syncfusion.EJ2.Charts.AxisPosition.Outside">
                        <e-majorgridlines width="0"></e-majorgridlines>
                    </e-chart-primaryxaxis>
                    <e-chart-primaryyaxis minimum="0" maximum="100" interval="25" style="color:#fff" labelFormat="{value}%">
                        <e-majorticklines width="0"></e-majorticklines>
                        <e-minorticklines width="0"></e-minorticklines>
                        <e-linestyle width="0"></e-linestyle>
                    </e-chart-primaryyaxis>
                    <e-chart-chartarea>
                        <e-chartarea-border width="0"></e-chartarea-border>
                    </e-chart-chartarea>
                    <e-series-collection>
                        <e-series dataSource="ViewBag.ChartPoints" xName="Type" yName="Rate" opacity="0.5" columnWidth="0.8" enableTooltip="false" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column">
                            <e-series-marker>
                                <e-series-datalabel visible="false" position="@Syncfusion.EJ2.Charts.LabelPosition.Top">
                                    <e-font color="black" fontWeight="600"></e-font>
                                </e-series-datalabel>
                            </e-series-marker>
                        </e-series>
                        <e-series dataSource="ViewBag.ChartPoints" xName="Type" yName="Loses" tooltipMappingName="Text" columnWidth="0.8" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column">
                            <e-series-marker>
                                <e-series-datalabel visible="true" name="Text" position="@Syncfusion.EJ2.Charts.LabelPosition.Top">
                                    <e-font color="#ffffff" fontWeight="600"></e-font>
                                </e-series-datalabel>
                            </e-series-marker>
                        </e-series>
                    </e-series-collection>
                    <e-chart-tooltipsettings enable="true" header="<b>${point.x}</b>" format="Rate : <b>${point.tooltip}</b>"></e-chart-tooltipsettings>
                    <e-chart-legendsettings visible="false"></e-chart-legendsettings>
                </ejs-chart>
            </div>

            <script>
                function pointRender(args) {
                    var selectedTheme = location.hash.split('/')[1];
                    selectedTheme = selectedTheme ? selectedTheme : 'material';
                    if (selectedTheme && selectedTheme.indexOf('fabric-white') > -1) {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme && selectedTheme.indexOf('fabric') > -1) {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'material-dark') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'material') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'bootstrap5-dark') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'bootstrap5') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'bootstrap-dark') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'bootstrap') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'highcontrast') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'fluent-dark') {
                         if (args.series.yName === "Rate")
                               args.fill = "#f9fafb";
                    }
                    else if (selectedTheme === 'fluent') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'tailwind-dark') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'tailwind') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === '#fff') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else if (selectedTheme === 'material3') {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                    else {
                         if (args.series.yName === "Rate")
                               args.fill = "#556b2f";
                    }
                }
                function load(args) {
                    var selectedTheme = location.hash.split('/')[1];
                    selectedTheme = selectedTheme ? selectedTheme : 'Material';
                    args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-white/i, 'White').replace(/contrast/i, 'Contrast'));
                    args.chart.width = ej.base.Browser.isDevice ? "100%" : "77%";
                    args.chart.series[0].cornerRadius.bottomLeft = ej.base.Browser.isDevice ? 12 : 35;
                    args.chart.series[0].cornerRadius.bottomRight = ej.base.Browser.isDevice ? 12 : 35;
                    args.chart.series[0].cornerRadius.topLeft = ej.base.Browser.isDevice ? 12 : 35;
                    args.chart.series[0].cornerRadius.topRight = ej.base.Browser.isDevice ? 12 : 35;
                    args.chart.series[1].cornerRadius.bottomLeft = ej.base.Browser.isDevice ? 12 : 35;
                    args.chart.series[1].cornerRadius.bottomRight = ej.base.Browser.isDevice ? 12 : 35;
                    args.chart.series[1].cornerRadius.topLeft = ej.base.Browser.isDevice ? 12 : 35;
                    args.chart.series[1].cornerRadius.topRight = ej.base.Browser.isDevice ? 12 : 35;
                    args.chart.series[1].marker.dataLabel.enableRotation = ej.base.Browser.isDevice ? "true" : "false";
                    args.chart.series[1].marker.dataLabel.angle = ej.base.Browser.isDevice ? -90 : 0;
                    args.chart.series[1].marker.dataLabel.font.size = ej.base.Browser.isDevice ? "9px" : "11px";
                    args.chart.primaryXAxis.labelIntersectAction = ej.base.Browser.isDevice?'None':'Rotate45';
                    args.chart.primaryXAxis.labelRotation = ej.base.Browser.isDevice?'-45':'0';
                }

            </script>
